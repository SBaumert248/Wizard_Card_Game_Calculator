            </TableRow>

            <TableRow
                android:id="@+id/rowPlayer6"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgPlayer6Active"
