                    android:visibility="gone" />

                <TextView
                    android:id="@+id/actPointsPlayer6"
                    style="@style/ActualPointsStyle"
                    android:text="@string/player6_points"
                    android:visibility="gone" />

            </TableRow>

            <TableRow
                android:id="@+id/ButtomBtnBarSpace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/unused"
                    style="@style/TextViewLastPoints"
                    android:text="" />

            </TableRow>

            <TableRow
                android:id="@+id/ButtomBtnBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="bottom">

                <Button
                    android:id="@+id/nextRoundBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginRight="10dp"
                    android:layout_span="3"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/next_round"
                    android:textColor="@color/text_color"
                    android:typeface="serif"
                    android:visibility="invisible"
                    app:backgroundTint="@color/default_yellow" />
            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>