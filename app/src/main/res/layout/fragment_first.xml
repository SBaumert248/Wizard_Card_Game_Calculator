                android:layout_height="match_parent"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/textLastPointsPlayer3"
                    style="@style/TextViewLastPoints"
                    android:text="@string/last_points_player3" />
            </TableRow>

            <TableRow
