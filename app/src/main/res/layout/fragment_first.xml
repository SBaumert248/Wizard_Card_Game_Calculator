<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:padding="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <TableRow
                android:id="@+id/rowHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textActRound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:text="@string/choose_player"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:typeface="serif" />

                <ImageView
                    android:id="@+id/imgThink"
                    style="@style/ImgThink"
                    android:layout_column="2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgGet"
                    style="@style/ImgGetWin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgScore"
                    style="@style/ImgScore"
                    android:visibility="gone" />

            </TableRow>

            <TableRow
                android:id="@+id/rowLastPointsPlayer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/textLastPointsPlayer1"
                    style="@style/TextViewLastPoints"
                    android:layout_width="11dp"
                    android:text="@string/last_points_player1" />
            </TableRow>

            <TableRow
                android:id="@+id/rowPlayer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imgPlayer1Active"
                    style="@style/ImgActivePlayerStyle"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/namePlayer1"
                    style="@style/EditPlayerNameStyle"
                    android:text="@string/player1" />

                <EditText
                    android:id="@+id/editThinkPlayer1"
                    style="@style/ActualEditPointsStyle"
                    android:text="@string/player1_think"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editGetWinPlayer1"
                    style="@style/ActualEditPointsStyle"
                    android:text="@string/player1_get_win"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/actPointsPlayer1"
                    style="@style/ActualPointsStyle"
                    android:text="@string/player1_points"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:id="@+id/rowLastPointsPlayer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/textLastPointsPlayer2"
                    style="@style/TextViewLastPoints"
                    android:text="@string/last_points_player2" />

            </TableRow>

            <TableRow
